@model UserListModel


<div class="row mt-3">
    <div class="col-6">
        <h3>Person Information to Add Account</h3>
        <p>
            User Name : @Model.Name
        </p>
        <p>
            User Surname : @Model.Surname
        </p>
        <p>
            Number Of User Active Accounts : <get-account-count application-user-id="@Model.Id" ></get-account-count>
        </p>
    </div>
    <div class="col-6">
        <form method="post" asp-action="Create" asp-controller="Account">
            <input type="hidden" name="ApplicationUserId" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label"> Account Number :</label>
                <input type="number" class="form-control" name="AccountNumber"/>
            </div>
            <label class="form-label">Balance :</label>
            <div class="mb-3">
                <input type="number" class="form-control" name="Balance" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
