@model SelectList

<div class="mt-3">
    <form asp-action="SendMoney" method="post" class="w-75 mx-auto">
        <input type="hidden" name="SenderId" value="@ViewBag.SenderId" />

        <div class="mb-3">
            <label>Account Number You Will Send:</label>
            <select class="form-control" asp-items="@Model" name="AccountId"></select>
        </div>
        <div class="mb-3">
            <label>Amount to Send:</label>
            <input type="number" name="Amount" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Send Money</button>
        </div>
    </form>
</div>
